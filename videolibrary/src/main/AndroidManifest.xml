<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wtg.videolibrary">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.providers.media.MediaProvider" />

    <application>
        <activity
            android:name=".ui.activity.MediaPreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.CameraPreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.CameraActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.ImagePickerActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
